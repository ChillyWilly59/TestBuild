@model List<TestBuild.Models.TagReportViewModel>

@{
    var projectNames = new List<string> { "TotalChats", "Duration", "Ratings", "ResponseTime"};
}

<!DOCTYPE html>
<html>
<head>
    <title>Tags Report</title>
</head>
<body>
    <h2>Tags Report</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Tag</th>
                <th>Count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tagReport in Model)
            {
                <tr>
                    <td>@tagReport.Date</td>
                    <td>
                        <table>
                            @foreach (var tagRecord in tagReport.TagRecords)
                            {
                                <tr>
                                    <td>@tagRecord.Tag</td>
                                </tr>
                            }
                        </table>
                    </td>
                    <td>
                        <table>
                            @foreach (var tagRecord in tagReport.TagRecords)
                            {
                                <tr>
                                    <td>@tagRecord.Count</td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @foreach (var projectName in projectNames)
    {
        <a href="/project/@projectName" class="btn btn-primary">@projectName Project</a>
    }
    <a href="/home" class="btn btn-primary">Back to Home</a>
</body>
</html>
