@model TestBuild.Model.DurationReport

@{
    var projectNames = new List<string> { "TotalChats", "Ratings", "ResponseTime", "Tags" };
}

<!DOCTYPE html>
<html>
<body>
    <h2>Duration Report</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Agents Chatting Duration</th>
                <th>Count</th>
                <th>Duration</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.Records)
            {
                <tr>
                    <td>@record.Key</td>
                    <td>@record.Value.Agents_chatting_duration</td>
                    <td>@record.Value.Count</td>
                    <td>@record.Value.Duration</td>
                </tr>
            }
        </tbody>
    </table>

    @foreach (var projectName in projectNames)
    {
        <a href="/project/@projectName" class="btn btn-primary">@projectName Project</a>
    }
    <a href="/home" class="btn btn-primary">Back to Home</a>
</body>
</html>
