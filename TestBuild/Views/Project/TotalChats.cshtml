@model TestBuild.Model.TotalChats

@{
    var projectNames = new List<string> {"Duration", "Ratings", "ResponseTime", "Tags" };
}

<h2>Total Chats Report</h2>



<table class="table table-dark table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Total Chats</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model.Records)
        {
            <tr>
                <td>@record.Key</td>
                <td>@record.Value.Total</td>
            </tr>
        }
    </tbody>
</table>
@foreach (var projectName in projectNames)
{
    <a href="/project/@projectName" class="btn btn-primary">@projectName Project</a>
}
<a href="/home" class="btn btn-primary">Back to Home</a>

