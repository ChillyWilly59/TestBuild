@model TestBuild.Model.Rating

@{
    var projectNames = new List<string> { "TotalChats", "Duration", "ResponseTime", "Tags" };
}

<!DOCTYPE html>
<html>
<body>
    <h2>Rating</h2>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Chats</th>
                <th>Good</th>
                <th>Bad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model.Records)
            {
                <tr>
                    <td>@record.Key</td>
                    <td>@record.Value.Chats</td>
                    <td>@record.Value.Good</td>
                    <td>@record.Value.Bad</td>
                </tr>
            }
        </tbody>
    </table>

    @foreach (var projectName in projectNames)
    {
        <a href="/project/@projectName" class="btn btn-primary">@projectName Project</a>
    }
    <a href="/home" class="btn btn-primary">Back to Main</a>
</body>
</html>
